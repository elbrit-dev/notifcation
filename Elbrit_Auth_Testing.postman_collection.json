{
  "info": {
    "name": "Elbrit Auth Testing",
    "_postman_id": "elbrit-auth-test-001",
    "description": "Collection for testing Elbrit authentication endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Tests",
      "item": [
        {
          "name": "1. Auth - Valid Email (Microsoft SSO)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@elbrit.org\",\n  \"authProvider\": \"microsoft\"\n}"
            },
            "url": {
              "raw": "https://app.elbrit.org/api/erpnext/auth",
              "protocol": "https",
              "host": ["app", "elbrit", "org"],
              "path": ["api", "erpnext", "auth"]
            },
            "description": "Test authentication with a valid email address (Microsoft SSO)"
          },
          "response": []
        },
        {
          "name": "2. Auth - Valid Phone Number",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"+919876543210\",\n  \"authProvider\": \"phone\"\n}"
            },
            "url": {
              "raw": "https://app.elbrit.org/api/erpnext/auth",
              "protocol": "https",
              "host": ["app", "elbrit", "org"],
              "path": ["api", "erpnext", "auth"]
            },
            "description": "Test authentication with a valid phone number"
          },
          "response": []
        },
        {
