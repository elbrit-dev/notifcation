            "url": {
              "raw": "https://app.elbrit.org/api/erpnext/auth",
              "protocol": "https",
              "host": ["app", "elbrit", "org"],
              "path": ["api", "erpnext", "auth"]
            },
            "description": "Test authentication with phone number without country code"
          },
          "response": []
